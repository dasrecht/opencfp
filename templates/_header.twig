<header class="header">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-9">
                    {% if cfp_open %}
                        <h1 class="headline headline-alpha">Call For Papers ist offen!</h1>
                        <h3 class="headline headline-alpha">Eingabe von Talks offen bis am {{ site.enddate | date(site.date_format) }}</h3>
                    {% else %}
                        <h1 class="headline headline-alpha">
                            {% if site.show_submission_count %}
                                Call for Papers ended with {{ number_of_talks }} Submissions!
                            {% else %}
                                Call for Papers ist beendet!
                            {% endif %}
                        </h1>
                        <h3 class="headline headline-alpha">Eingabe von Talks war offen bis am{{ site.enddate }}</h3>
                    {% endif %}
                    <p>
                        {% if cfp_open %}<a class="btn-opencfp btn-opencfp-medium btn-opencfp--outlined" href="{{ url('user_new') }}">Registrieren</a>{% endif %}
                    </p>
                </div>
            </div>
        </div>
    </div>
</header>
<section class="section section--light">
    <div class="container">
        <div class="row">
            {% if site.event_location is defined and site.date_format is defined %}
            <div class="col-md-8"><h3 class="headline headline--alpha">
                {{ site.title }} ist am {{ site.arrival|date(site.date_format, false) }} im Karl der Grosse, ZÃ¼rich</h3></div>
            {%  else %}
                <div class="col-md-8"><h3 class="headline headline--alpha">For More Information About The Conference</h3></div>
            {% endif %}
            <div class="col-md-4 text-right"><a href="{{ site.eventurl }}" class="btn-opencfp btn-opencfp-medium btn-opencfp--light">Webseite</a></div>
        </div>
    </div>
</section>
